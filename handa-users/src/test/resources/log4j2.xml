<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="commonPatternLayout">%d{yyyy-MM-dd hh:mm:ss} %p %c{1.} - %m%n</Property>
    </Properties>
    <Appenders>
        <Console
            name="stdout"
            target="SYSTEM_OUT">
            <PatternLayout pattern="${commonPatternLayout}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>